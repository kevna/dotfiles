general {
	colors = true
	interval = 5
	markup = "pango"
	color_good = "#58971a"
	color_bad = "#cc241d"
	color_degraded = "#689d68"
}

order += "window"
order += "scratchpad"
# order += "group media"
order += "volume_status"
order += "bluetooth"
{{- if eq .class "work" }}
order += "group network"
{{- else }}
order += "group wifi"
order += "loadavg"
{{- end }}
order += "apt_updates"
order += "battery_level"
order += "clock"

window {}
scratchpad {}

group media {
	frame {
		mpd_status short {
			format = "{state}"
		}
		volume_status {
			format = "‚ô©{percentage}"
			format_muted = " ùÑΩ {percentage}"
		}
	}

	mpd_status full {}
}

volume_status {
	# format_muted = "‚ô© {percentage}"
	format = "  <span font_size='larger'>ùÑû</span>{percentage}"
	format_muted = "  <span font_size='larger'>ùÑû</span>{percentage}"
}

bluetooth {}

{{- if eq .class "work" }}
group network {
	cycle = 30
	frame {
		wifi {
			format = "{icon} {ssid}|W:down"
			separator = false
		}
		file_status {
			path = "/proc/sys/net/ipv4/conf/tun0"
			format = "ST_VPN {icon}"
		}
	}
	net_iplist {
		iface_blacklist = ["eno2", "lo"]
		format_iface = "{ip4}"
		format = "{format_iface}"
		iface_sep = "  "
	}
	net_rate {
		format_value = "[\?min_length=10 {value:.1f}{unit}]"
		format = "{down}‚Üì {up}‚Üë"
		sum_values = true
	}
}
{{- else }}
group wifi {
	cycle = 30
	wifi {
		format = "{icon} {ssid}|W:down"
	}
	net_iplist {
		iface_blacklist = ["eno2", "tun*", "lo"]
		format_iface = "{ip4}"
		format = "{format_iface}"
	}
}

loadavg {
	format = "{1min} {5min} {15min}"
}
{{- end }}

apt_updates {
	format = "[\?not_zero {apt}]"
}

battery_level {
	format = "{icon}[\?not_zero  {time_remaining}]"
	hide_seconds = True
	color_charging = "#d79921"
	threshold_full = 75
}

clock {
	format = "{Europe/London}"
	format_time = "%F %H:%M"
}
