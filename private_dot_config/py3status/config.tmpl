# pystatus configuration file.
# see "https://py3status.readthedocs.io/en/3.8/modules.html" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	interval = 5
	markup = "pango"
	color_good = "#58971a"
	color_bad = "#cc241d"
	color_degraded = "#689d68"
}

{{- if contains "terminal" .chezmoi.hostname }}
order += "window_title_async"
order += "scratchpad_async"
order += "group vpn"
{{- else }}
order += "window"
order += "scratchpad"
{{- end }}
# order += "group media"
order += "backlight"
order += "group wifi"
order += "bluetooth"
{{- if not (contains "terminal" .chezmoi.hostname) }}
order += "loadavg"
{{- end }}
order += "apt_updates"
order += "battery_level"
order += "clock"

{{- if contains "terminal" .chezmoi.hostname }}
window_title_async {}
scratchpad_async {}
group vpn {
	file_status {
		path = "/proc/sys/net/ipv4/conf/tun0"
		format = "ST_VPN {icon}"
	}
	net_iplist {
		iface_blacklist = ["wlo1", "eno2", "lo"]
		format_iface = "{ip4}"
		format = "{format_iface}"
	}
}
{{- else }}
window {}
scratchpad {}
{{- end }}

group media {
	frame {
		mpd_status short {
			format = "{state}"
		}
		volume_status {
			format = "‚ô©{percentage}"
			format_muted = " ùÑΩ {percentage}"
		}
	}

	mpd_status full {}
}

backlight {
	format = "‚òº{level}"
}

group wifi {
	cycle = 30
	wifi {
		format = "{icon} {ssid}|W:down"
	}
	net_iplist {
		iface_blacklist = ["eno2", "tun*", "lo"]
		format_iface = "{ip4}"
		format = "{format_iface}"
	}
}

bluetooth {}

ethernet _first_ {
	# if you use %speed, i3status requires root privileges
	format_up = "E:%ip (%speed)"
	format_down = "E:down"
}

{{- if not (contains "terminal" .chezmoi.hostname) }}
loadavg {
	format = "{1min} {5min} {15min}"
}
{{- end }}

apt_updates {
	format = "[\?not_zero {apt}]"
}

battery_level {
	format = "{icon}[\?not_zero  {time_remaining}]"
	hide_seconds = True
	color_charging = "#d79921"
	threshold_full = 75
}

clock {
	format = "{Europe/London}"
	format_time = "%F %H:%M"
}
