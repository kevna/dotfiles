# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	interval = 5
	markup = "pango"
	color_good = "#58971a"
	color_bad = "#cc241d"
	color_degraded = "#689d68"
	# olor_degraded = "#a89984"
}

order += "window"
order += "scratchpad"
#order += "group media"
order += "backlight"
# order += "disk /"
order += "group networks"
order += "loadavg"
order += "apt_updates"
order += "battery_level"
order += "clock"

window {}

scratchpad {}

group media {
	frame {
		mpd_status short {
			format = "{state}"
		}
		volume_status {
			format = "‚ô©{percentage}"
			format_muted = " ùÑΩ {percentage}"
		}
	}

	mpd_status full {}
}

backlight {
	format = "‚òº{level}"
}

disk "/" {
	format = "%avail/%total"
}

group networks {
	cycle = 30

	bluetooth {}

	wifi {
		format = "W:{icon} {ssid} {ip}|W:down"
	}
}

ethernet _first_ {
	# if you use %speed, i3status requires root privileges
	format_up = "E:%ip (%speed)"
	format_down = "E:down"
}

loadavg {
	format = "{1min} {5min} {15min}"
}

apt_updates {
	format = "[\?not_zero {apt}]"
}

battery_level {
	format = "{icon}[\?not_zero  {time_remaining}]"
	hide_seconds = True
	color_charging = "#d79921"
	threshold_full = 75
}

clock {
	format = "{Europe/London}"
	format_time = "%F %H:%M"
}
